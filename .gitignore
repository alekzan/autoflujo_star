# Ignore the virtual environment
venv/

# Ignore environment variables
.env

# Ignore unnecessary files
*.pyc
__pycache__/
*.log
.DS_Store

# Ignore Jupyter Notebook checkpoints
.ipynb_checkpoints/
*.ipynb

# Ignore everything inside "data/"
data/*

# But keep the "crm" and "graphs" folders
!data/crm/
!data/graphs/

# Ignore all files inside the unignored folders
data/crm/*
data/graphs/*

# Allow keeping an empty placeholder file in the folders
!data/crm/.gitkeep
!data/graphs/.gitkeep
